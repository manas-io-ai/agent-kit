# Required: Your OpenAI API key (or compatible API)
OPENAI_API_KEY=sk-your-key-here

# Optional: Use a different OpenAI-compatible endpoint
# OPENAI_BASE_URL=http://localhost:11434/v1  # Ollama
# OPENAI_BASE_URL=https://api.anthropic.com/v1  # Anthropic (with adapter)

# Optional: Model to use (default: gpt-4o-mini)
MODEL=gpt-4o-mini

# Optional: Brave Search API key for web_search tool
# Get one free at: https://brave.com/search/api/
BRAVE_API_KEY=

# Optional: Working directory for file operations
WORKING_DIR=./workspace

# Optional: Maximum agent iterations per request
MAX_ITERATIONS=15
